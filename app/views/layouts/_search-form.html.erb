<%= form_tag(search_path, method: :get, class: "form-inline") do %>
    <%= text_field_tag :keywords, params[:event],
                       placeholder: "Keywords or location", class: "text"  %>
    <%= date_field_tag :date, params[:search], class: "text" %>
    <%= submit_tag "Search", name: nil, class: "button" %>
<% end %>